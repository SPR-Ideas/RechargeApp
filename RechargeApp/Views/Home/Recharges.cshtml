@{
    Layout = "~/Views/Shared/LayoutDashboard.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th>
                Plan
            </th>
            <th>
                Amount
            </th>
            <th>
                Description
            </th>
            <th> 
                Validity 
            </th>
            <th>
                Days Left
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Recharges)
        {
            
            
                <tr>
                 <td>
                    @item.name
                </td>
                <td>
                    @item.price
                </td>
                 <td>
                        @item.description
                 </td>
                 <td>
                        @item.validity
                 </td>

                <td>
                    @(item.validity - (DateTime.Now - item.timestamp).Days)

                </td>
                
            </tr>
            
        }
    </tbody>
</table>
